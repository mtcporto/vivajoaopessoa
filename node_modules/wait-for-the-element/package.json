    "devDependencies" :
    {
        "rollup" : "2.58.3",
        "rollup-plugin-terser" : "7.0.2",
        "@rollup/plugin-node-resolve" : "13.0.6",
        "@rollup/plugin-commonjs" : "21.0.1",
        "@rollup/plugin-babel" : "5.3.0",
        "mocha" : "9.1.3",
        "chai" : "4.3.4",
        "chai-as-promised" : "7.1.1",
