    "author" :
    {
        "name" : "Luke Phillips",
        "email" : "lsphillips.mail@gmail.com"
    },

    "keywords" :
    [
        "wait",
        "element",
        "selector"
    ],

    "homepage" : "https://github.com/lsphillips/WaitForTheElement",

